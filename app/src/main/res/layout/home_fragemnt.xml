<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgyellow"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivlogo"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_fitness"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Fitness"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn_health"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Health"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn_food"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Food"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn_sleep"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Sleep"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn_fasting"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Fasting"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btn_motivation"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border_button_blue"
            android:padding="@dimen/_10sdp"
            android:text="Motivation"
            android:textAllCaps="false"
            android:textColor="@color/btn_textcolor"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></Button>


    </LinearLayout>


</RelativeLayout>