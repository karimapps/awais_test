<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgyellow"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">

    </ImageView>

    <TextView
        android:id="@+id/tvfitness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivlogo"
        android:gravity="center_horizontal"
        android:text="Help Center"
        android:textColor="#fff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"></TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_back"
        android:layout_below="@+id/tvfitness">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llwelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#35434E"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequently Asked Questions (FAQs)"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"></TextView>

                <View
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="#fff"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View our Frequently Asked Question section to view the answer of your question straight away... "
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#35434E"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ask Car Buddy Forum"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"></TextView>

                <View
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="#fff"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With our strong Mliving community there is always some one out to assist and answer your question.... "
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#35434E"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"></TextView>

                <View
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="#fff"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View our terms and conditions including our privacy policy ,cookies policy , disclaimer and GDPR policy ... "
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal"></TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lldata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#35434E"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"></TextView>

                <View
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#fff"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If you still have'nt been able to find answer to your question or you have some specific question , our team is here to help... "
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="normal"></TextView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/border_button_blue"
        android:padding="@dimen/_5sdp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/btn_textcolor"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:visibility="gone"></Button>


</RelativeLayout>