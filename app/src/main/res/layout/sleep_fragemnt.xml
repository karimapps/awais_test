<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgyellow"
    tools:context=".activities.RegisterActivity">

    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">

    </ImageView>

    <TextView
        android:id="@+id/tvfitness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivlogo"
        android:gravity="center_horizontal"
        android:text="Sleep"
        android:textColor="#fff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"></TextView>

    <ListView
        android:id="@+id/alert_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_back"
        android:layout_below="@+id/tvfitness">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#fff"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Enable Bed Time Quotes"
                    android:textColor="@color/btn_textcolor">

                </TextView>

                <Switch
                    android:id="@+id/sw_bed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></Switch>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#fff"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Enable Wake Notification"
                    android:textColor="@color/btn_textcolor">

                </TextView>

                <Switch
                    android:id="@+id/sw_wakeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></Switch>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#fff"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Days Active"
                    android:textColor="@color/btn_textcolor">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_monday"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/circleyello"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="M"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_tues"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="T"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_wed"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="W"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_thurs"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="T"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_fri"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="F"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_sat"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="S"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                    <TextView
                        android:id="@+id/tv_sun"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="@drawable/circle"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="S"
                        android:textColor="@color/btn_textcolor"
                        android:textSize="@dimen/_20ssp"></TextView>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#fff"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bed Time"
                    android:textColor="@color/btn_textcolor">

                </TextView>

                <TextView
                    android:id="@+id/tvbedtime"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_button_blue"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="time"
                    android:padding="@dimen/_10sdp"
                    android:text="23:00"
                    android:textColor="@color/btn_textcolor"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="#fff"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Wake Up Time"
                    android:textColor="@color/btn_textcolor">

                </TextView>

                <TextView
                    android:id="@+id/tvwakeuptime"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_button_blue"

                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="time"
                    android:padding="@dimen/_10sdp"
                    android:text="07:00"
                    android:textColor="@color/btn_textcolor"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


    <Button

        android:id="@+id/btn_back"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/border_button_blue"
        android:padding="@dimen/_5sdp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/btn_textcolor"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"></Button>


    <com.warkiz.widget.IndicatorStayLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toRightOf="@+id/tvnoti"
        android:paddingBottom="@dimen/_5sdp">

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="@color/color_gray"
            app:isb_indicator_text_color="@color/colorAccent"
            app:isb_indicator_text_size="18sp"
            app:isb_max="6"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/bgyellow"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_drawable="@drawable/vline"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="@color/color_blue"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="6"
            app:isb_track_background_color="@color/btn_textcolor"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/btn_textcolor"
            app:isb_track_progress_size="4dp" />

    </com.warkiz.widget.IndicatorStayLayout>


</RelativeLayout>